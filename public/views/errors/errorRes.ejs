<html lang="en">
<head>
    <script async type="module" src="/scripts/themeLoader.js" nonce="<%=hash%>"></script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="theme-color" content="#111d2a">
    <link rel="icon" href="/images/<%=icon_%>">
    <title><%=title%></title>
</head>
<body>
    <style>
        @font-face {
            font-family: 'Comic';
            src: url('/fonts/comic-webfont.woff2') format('woff2');
        }

        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            -webkit-tap-highlight-color: transparent;
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            font-family: 'Comic';
        }
        body{
            background: #111d2a;
            color: #3E5968;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            height: 100vh;
            width: 100vw;
            overflow: hidden;
        }
        .text{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        h1{
            font-size: 6rem;
        }
        h3{
            color: #fff;
            position: absolute;
        }
        a{
            color: #fff;
            text-decoration: none;
            background: var(--secondary-dark, #0575e6);
            padding: 10px 20px;
            border-radius: 10px;
        }
        a:hover{
            filter: brightness(0.9);
        }
    </style>
    <div class="container">
        <div class="text">
            <h1><%=errorCode%></h1>
            <h3><%=errorMessage%></h3>
        </div>
    </div>
    <a href="/join"><%=buttonText%></a>
</body>
</html>
